<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBatches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/buttonDeleteSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xoa_dot_da_chon"
            android:visibility="gone"/> <!-- Ẩn theo mặc định -->

        <Button
            android:id="@+id/buttonExportSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xuat_du_lieu"
            android:visibility="gone"/> <!-- Ẩn theo mặc định -->
    </LinearLayout>
</LinearLayout>